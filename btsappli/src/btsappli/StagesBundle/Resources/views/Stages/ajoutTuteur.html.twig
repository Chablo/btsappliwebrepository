{# src/btsappli/StagesBundle/Resources/views/Stages/ajoutTuteur.html.twig #}

{# Vue qui permet à l'étudiant d'ajouter une nouveau tuteur #}

{% extends "::vueMere.html.twig" %}

{% block contenuCentral %}
<div class="col-lg-10 col-lg-offset-1">
    <div style="margin-top:18px;">
        <div class="panel panel-primary">
            <div class="panel-heading"><h3>Ajout d'un tuteur pour l'entreprise <i>{{ entreprise.nom }}</i></h3></div>
            <div class="panel-body">
                <form method="post" {{ form_enctype(formulaireTuteur) }}>
                    {{ form_widget(formulaireTuteur) }}
                    <div class="col-lg-1 col-lg-offset-1">
                        <a href="{{ path('btsappli_stages_ajoutStageTuteur') }}" role="button" class="btn btn-primary pull-left" type="button" style="width:140px">Annuler</a>
                    </div>
                    <div class="col-lg-1  col-lg-offset-8">
                        <input type="submit" class="btn btn-primary pull-right" style="width:140px" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}