{# src/btsappli/StagesBundle/Resources/views/Stages/vueEntreprise.html.twig #}

{% extends "::vueMere.html.twig" %}

{% block contenuCentral %}
<div class="col-lg-12">
    <div style="margin-top:18px;">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Entreprise <em>{{ entreprise.nom }}</em> :</h3></div>
            <div class="panel-body">
                    <div class="row">
		        		<div class="col-lg-12">
				            <dl class="dl-horizontal">
						        <dt>Représentant</dt><dd>{{ entreprise.representant }}</dd><br/>
						        
						        <dt>Adresse<dt><dd>{{ entreprise.adresse }}</dd>
						        <dt>Code postal</dt><dd>{{ entreprise.codePostal }}</dd>
						        <dt>Ville<dt><dd>{{ entreprise.ville }}</dd>
						        <dt>Pays</dt><dd>{{ entreprise.pays }}</dd><br/>
						        
						        <dt>Adresse email<dt><dd>{{ entreprise.adresseMail }}</dd>
						        <dt>Téléphone</dt><dd>{{ entreprise.telephone }}</dd>
						        <dt>Fax</dt><dd>{{ entreprise.fax }}</dd><br/>
						        
						        <dt>Service d'accueil</dt><dd>{{ entreprise.serviceAccueil }}</dd><br/>
						        
						        <dt>Description</dt><dd>{{ entreprise.description }}</dd>
				            </dl>
		        		</div>
		        	</div>
                    <div class="row">
                        <div class="col-lg-2">
                            <a href="{{ path('btsappli_stages_ajoutStageEntreprise') }}" role="button" class="btn btn-primary" type="button" style="width:140px"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Retour</a>
                        </div>
                        <div class="col-lg-2">
                            <a href="{{ path('btsappli_stages_modificationEntreprise') }}" role="button" class="btn btn-primary" type="button" style="width:140px"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</a>
                        </div>
                        <div class="col-lg-1 col-lg-offset-4">
                            <a href="{{ path('btsappli_stages_ajoutStageTuteur') }}" role="button" class="btn btn-primary" type="button" style="width:140px">Suivant <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}