{% trans_default_domain 'FOSUserBundle' %}


<div class="container">
         <!-- Ligne 2 -->
          <div class="row">
            <div class="col-sm-8">
              <div style="margin-top:80px;">
                <div class="panel panel-primary">
                 <div class="panel-heading">Inscription </div>
                  <div class="panel-body">
                      <ul style="list-style-type:none">

                        
                        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                        
                        
                        {{ form_errors(form.username) }}
                        {{ form_label(form.username, "Identifiant: ") }}
                        <li>{{ form_widget(form.username) }}</li>
 
                        {{ form_errors(form.email) }}
                        {{ form_label(form.email, "Email: ") }}
                        <li>{{ form_widget(form.email) }}</li>
 
                        {{ form_errors(form.plainPassword.first) }}
                        {{ form_label(form.plainPassword.first, "Mot de passe: ") }}
                        <li>{{ form_widget(form.plainPassword.first) }}
 
                        {{ form_errors(form.plainPassword.second) }}
                       &nbsp; &nbsp; {{ form_label(form.plainPassword.second, "Confirmer Mot de passe: ") }}
                        {{ form_widget(form.plainPassword.second) }}</li>
                        {{ form_row(form._token) }}
                        
                        {{ form_errors(form.nom) }}
                        {{ form_label(form.nom, "Nom: ") }}
                        <li>{{ form_widget(form.nom) }}</li>
                        
                        {{ form_errors(form.prenom) }}
                        {{ form_label(form.prenom, "Prenom: ") }}
                        <li>{{ form_widget(form.prenom) }}</li>
                        
                        {{ form_errors(form.telephone) }}
                        {{ form_label(form.telephone, "Telephone: ") }}
                        <li>{{ form_widget(form.telephone) }}</li>
                        
                        {{ form_errors(form.dateNaiss) }}
                        {{ form_label(form.dateNaiss, "Date de naissance: ") }}
                        <li>{{ form_widget(form.dateNaiss) }}</li>
                        
                        {{ form_errors(form.adresse) }}
                        {{ form_label(form.adresse, "Adresse: ") }}
                        <li>{{ form_widget(form.adresse) }}</li>
                        
                        {{ form_errors(form.codePostal) }}
                        {{ form_label(form.codePostal, "Code postal: ") }}
                        <li>{{ form_widget(form.codePostal) }}</li>
                        
                        {{ form_errors(form.ville) }}
                        {{ form_label(form.ville, "Ville: ") }}
                        <li>{{ form_widget(form.ville) }}</li>
                        
                        <div>
                           {# <input type="submit" value="{{ 'registration.submit'|trans }}" /> #}
                           <button type="submit" id="_submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary" >&nbsp; S'inscrire &nbsp; </button>
                        </div>
                        {#{{ form_end(form) }}#}
                       </ul> 
                   </div>
                </div>
              </div> 
            </div>
           </div>
          </div>
