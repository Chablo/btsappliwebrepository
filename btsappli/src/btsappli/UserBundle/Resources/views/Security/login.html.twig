
{% extends "::vueMere.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block contenuCentral %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

        <div class="container">
         <!-- Ligne 2 -->
          <div class="row">
            <div class="col-sm-2"> </div>
             <div class="col-sm-6">
              <div style="margin-top:150px;">
                <div class="panel panel-primary">
                 <div class="panel-heading">Bienvenue... </div>
                  <div class="panel-body">
                    <div class="col-sm-2"> </div>
                   <ul style="list-style-type:none">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" /></br>
    
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <li><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></br></br></li>
        
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <li><input type="password" id="password" name="_password" required="required" style="top:100px" /></br></br></li>
        
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></br></br>
        
          
                        <a href="{{ path('fos_user_registration_register') }}" role="button" class="btn btn-primary" type="button"> &nbsp; S'inscrire &nbsp; </a>  <!--&nbsp; = espace-->
        
                        <button type="submit" id="_submit" class="btn btn-primary" >Se connecter </button>
                    </form>
                   </ul> 
                   
                 </div>
                </div>
              </div> 
             <div class="col-sm-2"> </div>
            </div>
           </div>
          </div>

{% endblock %}


