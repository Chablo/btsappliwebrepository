{# app/Resources/views/vueMere.html.twig #}
<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{% block title %}BTS appli web{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    {% endblock %}
  </head>
  
  <body>
    <div class="container">
      <!-- Ligne 1 -->
      <div class="row">
        <div class="col-sm-12">
          <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                {% block header %}
                  <img src="{{ asset('images/LogoV4.png') }}" alt="Logo" />
                {% endblock %}
            </div>
          </nav>
        </div>
      </div>
    </div>

    <div class="container">

{% block contenuCentral %} 
        <div class="container">
         <!-- Ligne 2 -->
          <div class="row">
            <div class="col-sm-2"> </div>
             <div class="col-sm-8">
              <div style="margin-top:80px;"> {{ block ("fos_user_content") }} </div> <!-- bloc pour connexion, enregister et modifier profil -->
             <div class="col-sm-2"> </div>
            </div>
           </div>
          </div>
{% endblock %}

    </div>
    
    <div class="container">
      <!-- Ligne 3 -->
      <div class="row">
        <div class="col-sm-12">
            <nav class="navbar navbar-default navbar-fixed-bottom">
              <div class="container-fluid">
                {% block footer %}
                    <p class="navbar-text align-center">Copyright Becat Mateu LDF Bayonne</p>
                {% endblock %}
              </div>
            </nav>
        </div>
      </div>
    </div>
    
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  </body>
</html>