{% extends "::vueMere.html.twig" %}

{% block contenuCentral %}
{# Contient la liste des étudiants ... #}


<div style="margin-top:18px;"> <!-- pour descendre le contenu de x pixels -->

<div class="panel panel-primary">

    <div class="panel-heading">
        <h3> Valider les inscriptions </h3> 
    </div>
        
        <!-- Création du tableau contenant la liste des demandes-->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
               
                <!-- Création de la première ligne contenant le nom de chaque colonne -->
                <tr class="info" align="center">
                    <td>Nom</td>
                    <td>Prenom</td>
                    <td>Email</td>
                    <td>Promotion</td>
                    <td></td>
                </tr>
                
                <!-- Affichage de tous les demandes -->
                {% for userCourant in tabUser %} 
                    {% if userCourant.valide == 0 %}
                    <tr align="center">
                        <td>{{userCourant.nom}}</td>
                        <td>{{userCourant.prenom}}</td>
                        <td>{{userCourant.email}}</td>
                        <td>
                        <!-- bouton pour choisir la promotion -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Promotion <span class="caret"></span>
                                </button>
                            <ul class="dropdown-menu">
                                <li>
                                    
                                </li>
                            </ul>
                            </div>
                        </td>
                        <td><a type="button" role="button" class="btn btn-success"  href="{{ path('btsappli_utilisateurs_acceptInscriptions') }}"><span class="glyphicon glyphicon-ok" aria-hidden="true" ></span></a>
                            <a type="button" class="btn btn-danger"  href="{{ path('btsappli_utilisateurs_supprInscriptions') }}"><span class="glyphicon glyphicon-remove" aria-hidden="true" ></span></a>
                        </td>
                    </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
</div>
</div>

<div class="row">
        <div class="col-lg-1">
            <a href="{{ path('btsappli_utilisateurs_accueilAdmin') }}" role="button" class="btn btn-primary" type="button" style="width:150px">Retour</a>  <!--&nbsp; = espace-->
        </div>
</div>

{% endblock %}
