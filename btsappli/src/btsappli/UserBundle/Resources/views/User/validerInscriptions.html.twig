{% extends "::vueMere.html.twig" %}

{% block contenuCentral %}
{# Contient la liste des étudiants ... #}


<div style="margin-top:8px;"> <!-- pour descendre le contenu de x pixels -->
<div class="col-lg-10 col-lg-offset-1">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3> Valider les inscriptions </h3> 
        </div>
        <!-- Création du tableau contenant la liste des demandes-->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <!-- Création de la première ligne contenant le nom de chaque colonne -->
                <tr class="info" align="center">
                    <td style="width:200px">Nom</td>
                    <td style="width:200px">Prenom</td>
                    <td style="width:350px">Email</td>
                    <td style="width:250px">Validation&nbsp;|&nbsp;Suppression</td>
                </tr>
                <!-- Affichage de tous les demandes -->
                {% for userCourant in tabUser %} 
                    {% if userCourant.valide == 0 %}
                    <tr align="center">
                        <td>{{userCourant.nom}}</td>
                        <td>{{userCourant.prenom}}</td>
                        <td>{{userCourant.email}}</td>
                        <td><a type="button" role="button" class="btn btn-success"  href="{{ path('btsappli_utilisateurs_acceptInscriptions', {'id':userCourant.id}) }}"><span class="glyphicon glyphicon-ok" aria-hidden="true" ></span></a>
                            <a type="button" class="btn btn-danger"  href="{{ path('btsappli_utilisateurs_supprInscriptions', {'id':userCourant.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true" ></span></a>
                        </td>
                    </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1">
            <a href="{{ path('btsappli_utilisateurs_accueilAdmin') }}" role="button" class="btn btn-primary" type="button" style="width:140px">Retour</a>  <!--&nbsp; = espace-->
        </div>
    </div>
</div>

{% endblock %}
