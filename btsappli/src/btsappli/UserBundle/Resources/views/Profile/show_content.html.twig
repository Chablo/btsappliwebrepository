{% trans_default_domain 'FOSUserBundle' %}

<!-- Ligne contenant la fênetre -->
<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div style="margin-top:80px;">
            <div class="panel panel-primary"> <!--Fenetre-->
                <div class="panel-heading"><h4>Profil</h4></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            <!--Liste des informations du profil-->
                            <ul style="list-style-type:none">
                                <div class="fos_user_user_show">
                                    <p><b>{{ 'profile.show.email'|trans }}:</b> {{ user.email }}</p>
                                    <p><b>{{ 'Nom' }}:</b> {{ user.nom }}</p>
                                    <p><b>{{ 'Prenom' }}:</b> {{ user.prenom }}</p>
                                    <p><b>{{ 'Telephone' }}:</b> {{ user.telephone }}</p>
                                    <p><b>{{ 'Adresse' }}:</b> {{ user.adresse }}</p>
                                    <p><b>{{ 'Code postal' }}:</b> {{ user.codePostal }}</p>
                                    <p><b>{{ 'Ville' }}:</b> {{ user.ville }}</p>
                                </div>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-1 col-lg-offset-4">
                        <!--Bouron pour retourner à l'accueil-->
                        <a role="button" id="Retour" class="btn btn-primary pull-left" href="{{ path('btsappli_utilisateurs_accueilEtu') }}" style="width:150px">Accueil</a>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>