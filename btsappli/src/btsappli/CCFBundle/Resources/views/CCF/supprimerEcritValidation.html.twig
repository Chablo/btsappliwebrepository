{# src/btsappli/CCFBundle/Resources/views/CCF/supprimerEcritValidation.html.twig #}

{% extends "::vueMere.html.twig" %}

{% block contenuCentral %}
{# Contient la liste des étudiants avec leurs CCF ... #}
<div style="margin-top:18px;"> <!-- pour descendre le contenu de x pixels -->
<div class="panel panel-danger">
    <div class="panel-heading">
        <h3>Supprimer un CCF écrit</h3> 
    </div>
    <div class="panel-body">
        <p>Voulez-vous vraiment supprimer l'écrit de {{ecrit.matiere}} du {{ecrit.date|date("m/d/Y")}} à {{ecrit.debut|date("H:i")}} ?</p>
    </div>
</div>
</div>

<div class="row">
    <div class="col-lg-1 col-lg-offset-2">
    <a href="{{ path('btsappli_CCF_modifierEcrit', {'id':ecrit.id}) }}" role="button" class="btn btn-primary pull-left" type="button" style="width:140px">Annuler</a>  <!--&nbsp; = espace-->
    </div>
    <div class="col-lg-1 col-lg-offset-6">
    <a href="{{ path('btsappli_CCF_supprimerEcrit', {'id':ecrit.id}) }}" role="button" class="btn btn-danger pull-right" type="button" style="width:140px">Supprimer</a> 
    </div>
</div>


    <script src="resolve.js" type="text/javascript"></script>
{% endblock %}

