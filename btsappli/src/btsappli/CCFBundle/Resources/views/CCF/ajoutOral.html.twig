{% extends "::vueMere.html.twig" %}

{% block contenuCentral %}
<div class="col-lg-10 col-lg-offset-1">
    <div style="margin-top:46px;">
        <div class="panel panel-primary">
            <div class="panel-heading"><h3>Ajout d'un CCF oral :</h3></div>
                <div class="panel-body">
                    <!-- On fait appel au formulaire dans OralType.php -->
                    <form method="post" {{ form_enctype(formulaireOral) }}>
                        {{ form_widget(formulaireOral) }}
                        
                        <div class="col-lg-1 col-lg-offset-1">
                            <a href="{{ path('btsappli_CCF_planningOraux') }}" role="button" class="btn btn-primary pull-left" type="button" style="width:140px">Annuler</a>
                        </div>
                        <div class="col-lg-1  col-lg-offset-8">
                            <input type="submit" class="btn btn-primary pull-right" style="width:140px"/>
                        </div>
                    </form>
                </div>
                
        </div>
    </div>
</div>
{% endblock %}